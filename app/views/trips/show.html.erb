<div class="row newTripContainer">

  <!--side -->
  <div class="col-lg-2 col-md-0 col-sm-0 col-xs-0"></div>

  <!-- center content -->
  <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 text-center">

    <p id="notice"><%= notice %></p>

    <!-- Trip Image -->
    <div class="viewTripContentContainer"> 
      <%= image_tag(@trip.imageurl, class: "img-responsive text-center") if @trip.imageurl.present? %>
    </div><br/>

    <div class="viewTripContentContainer">
      <strong>Country:</strong> <%= @trip.countryname %>
    </div>

    <div class="viewTripContentContainer"> 
      <strong>From:</strong> <%= @trip.datefrom.strftime("%d %b %Y %A") %> 
    </div>

        <div class="viewTripContentContainer"> 
      <strong>To:</strong> <%= @trip.dateto.strftime("%d %b %Y %A") %> 
    </div>

    <div class="viewTripContentContainer"> 
      <strong>Description:</strong>
    </div>

    <div class="viewTripContentContainer"> 
      <%= @trip.description %>
    </div>

    <div class="viewTripButtonsContainer">   

      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 viewTripButtonHolder">
        <%= link_to 'Edit', edit_trip_path(@trip), class: "redBtn btn-block"  %>
      </div>

      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 viewTripButtonHolder">
        <%= link_to 'Back', trips_path, class: "whiteBtn btn-block" %>
      </div>
      

    </div>

  </div>  

  

  <!--side -->
  <div class="col-lg-2 col-md-0 col-sm-0 col-xs-0"></div>

</div>