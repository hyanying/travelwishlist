<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <!-- Events Title -->
  <div class="row">
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12"><h1>Travel Trip Wish List!</h1>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 indexAddEvents"><%= link_to 'Add New Trip', new_trip_path, class: "redBtn btn-block text-center" %></div>

  </div>

  <!-- Events Listing -->
  <div class="row">

    <% @trips.each do |trip| %>


    <div class ="col-lg-4 col-md-4 col-sm-12 col-xs-12">

      <div class="row">  
        <div class="indexTripCard shadowEffect" >

          <!-- image -->
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">    

            <%= image_tag(trip.imageurl, class: "img-responsive text-center") if trip.imageurl.present? %>

          </div>

          <!-- events description -->
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            <div class="indexTripTitle"><%= trip.countryname %></div>

            <div class="indexTripDate"><%= trip.datefrom.strftime("%d %b %Y") %> - <%= trip.dateto.strftime("%d %b %Y") %> </div> 

            <div class="indexTripDistance">200 km away</div>

            <div class="indexTripLinks"> 

              <div class="indexGlyphiconLeft text-left">        
                <%= link_to '',trip, class:"glyphicon glyphicon-eye-open indexGlyphicon" %>

                &nbsp; &nbsp;
                <%= link_to '', edit_trip_path(trip), class:"glyphicon glyphicon-pencil indexGlyphicon" %> 
              </div>

              <div class="indexGlyphiconRight text-right">   
                <%= link_to '', trip, class:"glyphicon glyphicon-trash indexGlyphicon", method: :delete, data: { confirm: 'Are you sure?' } %>
                
              </div>
            </div>  
          </div>
        </div> 
      </div> 

    </div>

    <% end %>

  </div>

</div>

